<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <Platform>Any CPU</Platform>
    <MajorVersion>3</MajorVersion>
    <MinorVersion>0</MinorVersion>
    <Branch Condition="'$(Branch)' == ''">nobranch</Branch>
    <Commit Condition="'$(Commit)' == ''">HEAD</Commit>

    <Build Condition="'$(Build)' == ''">$([System.DateTime]::UtcNow.ToString("yy"))$([System.DateTime]::UtcNow.DayOfYear)$([MSBuild]::Add($([System.DateTime]::UtcNow.Minute), $([MSBuild]::Multiply($([System.DateTime]::UtcNow.Hour), 60))))</Build>

    <SimpleVersion>$(MajorVersion).$(MinorVersion).$(Build)</SimpleVersion>
    <FullVersion>$(MajorVersion).$(MinorVersion).$(Build)-$(Branch).$(Commit)</FullVersion>
  </PropertyGroup>
</Project>