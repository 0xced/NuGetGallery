<Project DefaultTargets="RunFacts" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<ItemGroup>
		<XunitMsBuildRunner Include="$(MSBuildThisFileDirectory)..\packages\xunit.*\lib\net20\xunit.runner.msbuild.dll" />
    </ItemGroup>
    <PropertyGroup>
	    <BuildDependsOn>
	    	$(BuildDependsOn);
	    	RunFacts
	    </BuildDependsOn>
	</PropertyGroup>
    <UsingTask TaskName="Xunit.Runner.MSBuild.xunit" AssemblyFile="@(XunitMsBuildRunner)"/> 
    
    <Target Name="RunFacts" Condition="'$(RunFacts)' == 'true'" Inputs="$(TargetPath)" Outputs="$(OutputPath)$(MSBuildProjectName).results.xml">
        <xunit Assembly="$(TargetPath)" Xml="$(OutputPath)$(MSBuildProjectName).results.xml" />
    </Target>
</Project>