@using NuGetGallery
@model SubmitPackageRequest

<div id="layout-main" class="aside-1 group">
    
    <aside id="aside-first" class="aside-first group">
        <div class="zone zone-aside-first">
            <nav id="leftNav">
                <img src="@Url.Content("~/Content/Images/contribGraphic.png")" />
                <p>Submit your package for others to enjoy.</p>
            </nav>
        </div>
    </aside>
    
    <div id="layout-content" class="group">
        <div id="content" class="group">
            <div class="zone zone-content">
                <section>
                    <header>
                        <h2>New Contribution</h2>
                        <ul class="right" id="sequence">
                            <li class="current"><a href="#"><span>1 </span>Submit</a></li>
                            <li><span>2 </span>Verify Details</li>
                            <li><span>3 </span>Add Visuals</li>
                        </ul>
                    </header>
                    <div id="form">
                            <div id="uploadFileForm" class="selected">
                                @using (Html.BeginForm(ActionName.SubmitPackage, PackagesController.Name, FormMethod.Post, new { enctype = "multipart/form-data", @id = "uploadFileSubmissionForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    <aside>
                                        <p>Your package file will be uploaded and hosted on the gallery server.</p>
                                    </aside>
                                    <input type="file" id="PackageFile" name="PackageFile" />
                                    <div class="buttons">
                                        <input id="uploadFileButton" type="submit" value="Upload &raquo;" singleClickButton="true" />
                                    </div>
                                }
                            </div>
                    </div>
