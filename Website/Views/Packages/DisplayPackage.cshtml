@model DisplayPackageViewModel
<div id="layout-main" class="group">
    <div id="layout-content" class="group">
        
        <div id="content" class="group">
            <div class="zone zone-content">
                <section class="packageItemDetail icon">
                    <div id="thumbnails">
                        <div class="packageLogo">
                            <img src="@Model.IconUrl" alt="Icon for package @Model.Id" />
                        </div>
                    </div>
                    <div>
                        <header>
                            <div>
                                @if (Model.Prerelease) { 
                                    <span class="prerelease">Prerelease</span>
                                }
                                else if (Model.LatestVersion) {
                                    <span class="latest">Latest Version</span>
                                }
                                <h2>@Model.Title - @Model.Version</h2>
                            </div>
                            @if (Model.IsOwner(User)) {
                            <div class="zone zone-actions">
                            <ul>
                                <li><a class="edit" href="@Url.RouteUrl(RouteName.EditPackage, new {id = Model.Id, version = Model.Version})">Edit</a></li>
                                <li><a class="manage-owners" href="@Url.RouteUrl(RouteName.ManagePackageOwners, new {id = Model.Id})">Manage Owners</a></li>
                                <li><a href="#" onclick="DeletePackage('RouteMagic', '1.1.1'); return false;" class="delete">Delete</a></li>
                                <li>
                                    <a href="#" title="Unpublish" class="unpublishPackageLink" data-package-id="RouteMagic" data-package-version="1.1.1">
                                        Unpublish
                                    </a>
                                </li>
                                </ul>
                            </div>
                            }
                            <div>
                                <div class="zone zone-authors">
                                    <p class="author">By
                                        @Model.Authors.Flatten(@<a href="@Url.RouteUrl(RouteName.Search, new { q = @item })">@item.Name</a>)
                                    </p>
                                </div>
                            </div>
                        </header>
                        <p>@Model.Description</p>
                        <ul class="links">
                            @if (!String.IsNullOrEmpty(Model.ProjectUrl)) {
                                <li><a href="@Model.ProjectUrl" title="Visit the project site to learn more about this package">Project site</a></li>
                            }
                            @if (!String.IsNullOrEmpty(Model.LicenseUrl)) {
                                <li><a href="@Model.LicenseUrl" title="Make sure you agree with the license">License</a></li>
                            }
                            <li><a href="@Url.RouteUrl(RouteName.ReportAbuse, new { id = Model.Id, version = Model.Version })" title="Report Abuse">Report Abuse</a></li>
                            <li><a href="@Url.RouteUrl(RouteName.ContactOwners, new { id = Model.Id })">Contact Owners</a></li>
                        </ul>
                        <div class="commandWrapper">
                            <div class="commandPrompt">
                                <p class="command">PM&#62; Install-Package @Model.Id</p>
                            </div>
                        </div>        
                        <h4 class="packageDetailsTableHeader">Packages details</h4>
                        <table id="packageDetails">
                            <tr>
                                <th>Rating:</th>
                                <td>
                                    <div class="zone zone-rating">
                                        <div class="stars-rating " title="Log-in to rate this item">
                                            @ViewHelpers.DisplayRating(@Model.RatingAverage)
                                            <ul class="stars-details">
                                                <li>Ratings: @Model.RatingCount</li>
                                                <li>Average: @Model.RatingAverage</li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>Tags:</th>
                                <td>@Model.Tags.Flatten(@<a href="@Url.RouteUrl(RouteName.Search, new { q = @item })">@item</a>)</td>
                            </tr>
                            <tr>
                                <th>Total Downloads:</th>
                                <td>@Model.DownloadCount</td>
                            </tr>
                            <tr>
                                <th>Last updated:</th>
                                <td>@Model.LastUpdated</td>
                            </tr>
                            <tr>
                                <th>Package ID:</th>
                                <td>@Model.Id</td>
                            </tr>
                        </table>
                        <h4 class="packageDetailsTableHeader">Version history</h4>
                        <div id="versionHistory">
                            <table id="versionHistoryTable" cellpadding="0" cellspacing="0">
                                <thead>
                                    <tr class="header">
                                        <th class="version">Version</th>
                                        <th class="downloads">Downloads</th>
                                        <th class="lastUpdated">Last updated</th>
                                        <th class="rating">Rating</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var version in Model.PackageVersions) {
                                        <tr class="versionTableRow @if(version.LatestVersion) {<text>current recommended</text>}">
                                            <td class="version">
                                                @if (!version.LatestVersion) {
                                                    <a href="@Url.RouteUrl(RouteName.DisplayPackage, new { id = Model.Id })">@version.Title @version.Version</a>
                                                }
                                                else {
                                                    <span>@version.Title @version.Version</span>
                                                }
                                            </td>
                                            <td class="downloads">@version.DownloadCount</td>
                                            <td class="lastUpdated">@version.LastUpdated</td>
                                            <td class="rating">
                                                <div class="stars-rating">
                                                    @ViewHelpers.DisplayRating(@version.RatingAverage)
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        
        <div id="after-content">
            <div class="zone zone-after-content">
                <div id="deletePackageConfirmationDialogDiv" title="Confirm Delete" style="display:none">
                    <p>
                        Are you sure you wish to delete the package <span id="packageIdToDeleteSpan"></span>, version <span id="packageVersionToDeleteSpan"></span>?
                    </p>
                    <p class="confirmDialogWarning">
                        If you delete it, you will lose any associated downloads or reviews.
                    </p>
                    <form action="/Package/Delete" method="post">
                        <input type="hidden" id="packageIdToDelete" name="packageId" />
                        <input type="hidden" id="packageVersionToDelete" name="packageVersion" />
                        <input type="hidden" id="shouldRedirect" name="shouldRedirect" />
