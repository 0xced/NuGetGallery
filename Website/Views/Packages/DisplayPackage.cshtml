@model DisplayPackageViewModel
@{
    ViewBag.Tab = "Packages";
}
<div id="layout-main" class="group">
    <div id="layout-content" class="group">
        @if (TempData.ContainsKey("Message")) {
            <div id="messages">
                <div class="zone zone-messages">
                    <div class="message message-Information">@TempData["Message"]</div>
                </div>
            </div>
        }
        <div id="content" class="group">
            <div class="zone zone-content">
                <section class="packageItemDetail icon">
                    <div id="thumbnails">
                        <div class="packageLogo">
                            <img src="@(Model.IconUrl ?? @Links.Content.Images.packageDefaultIcon_png)" alt="Icon for package @Model.Id" />
                        </div>
                    </div>
                    <div>
                        <header>
                            <div class="title">
                                <h2>@Model.Title</h2>
                                <h3>
                                    @Model.Version
                                    @if (Model.Prerelease) { 
                                    <span class="prerelease">Prerelease</span>
                                    }
                                    else if (Model.LatestVersion) {
                                        <span class="latest">Latest Version</span>
                                    }
                                </h3>
                            </div>
                            <div class="description">
                                <p>
                                    @Model.Description
                                </p>
                                <p>
                                    To install @Model.Title, run the following command in 
                                    the Package Manager Console:
                                    <code class="command">
                                        Install-Package @Model.Id
                                    </code>
                                </p>
                            </div>
                        </header>
                                        
                        <h4 class="details-header">Packages details</h4>
                        @if (Model.IsOwner(User)) {
                            <div class="package-owner-actions">
                            <ul>
                                <li><a class="edit" href="@Url.EditPackage(Model)">Edit</a></li>
                                <li><a class="manage-owners" href="@Url.ManagePackageOwners(Model)">Manage Owners</a></li>
                                <li><a href="@Url.DeletePackage(Model)" class="delete">Delete</a></li>
                                <li>
                                    <a href="#" title="Unpublish" class="unpublishPackageLink" data-package-id="RouteMagic" data-package-version="1.1.1">
                                        Unpublish
                                    </a>
                                </li>
                                </ul>
                            </div>
                        }
                        <ul class="links">
                            @if (!String.IsNullOrEmpty(Model.ProjectUrl)) {
                                <li><a href="@Model.ProjectUrl" title="Visit the project site to learn more about this package">
                                    Project site</a></li>
                            }
                            @if (!String.IsNullOrEmpty(Model.LicenseUrl)) {
                                <li><a href="@Model.LicenseUrl" title="Make sure you agree with the license">License</a></li>
                            }
                            <li><a href="@Url.Action(MVC.Packages.ReportAbuse(Model.Id, Model.Version))" title="Report Abuse">Report Abuse</a></li>
                            <li><a href="@Url.Action(MVC.Packages.ContactOwners(Model.Id))">Contact Owners</a></li>
                        </ul>

                        <table id="packageDetails">
                            <tr>
                                <th>
                                    <strong>Package ID:</strong>
                                </th>
                                <td>
                                    <strong>@Model.Id</strong>
                                </td>
                            </tr>

                            <tr>
                                <th>
                                    Authors
                                </th>
                                <td>@Model.Authors.Flatten(@<a href="@Url.Search(item.Name)">@item.Name</a>)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Owners
                                </th>
                                <td>@Model.Owners.Flatten(@<a href="@Url.Search(item.Username)">@item.Username</a>)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Tags:
                                </th>
                                <td>@Model.Tags.Flatten(@<a href="@Url.Search(item)">@item</a>)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Last updated:
                                </th>
                                <td>@Model.LastUpdated.ToString("F")
                                </td>
                            </tr>
                        </table>

                        <div class="stats">
                            <span class="downloads">
                                <strong>@Model.TotalDownloadCount</strong>
                                <label>total downloads</label>
                            </span>
                            <span class="downloads">
                                <strong>@Model.DownloadCount</strong>
                                <label>for this version</label>
                            </span>
                            <div class="ratings">
                                <div class="stars-rating" title="Log-in to rate this item">
                                    @ViewHelpers.DisplayRating(@Model.RatingAverage)
                                    <ul class="stars-details">
                                        <li>Ratings: @Model.RatingCount</li>
                                        <li>Average: @Model.RatingAverage</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <h4 class="details-header">Dependencies</h4>
                        @if (Model.Dependencies.Any()) {
                            <table class="packages dependencies">
                                <thead>
                                    <tr class="header">
                                        <th style="width: 10%;">Id</th>
                                        <th class="version">Version Range</th>
                                    </tr>
                                </thead>
                            @foreach (var dependency in Model.Dependencies) {
                                <tr>
                                    <td style="width: auto;"><a href="@Url.Package(dependency.Id)">@dependency.Id</a></td>
                                    <td>@dependency.VersionSpec</td>
                                </tr>
                            }
                            </table>
                        }
                        else {
                            <div class="dependencies">
                                <em>No Dependencies</em>
                            </div>
                        }                            
                        <h4 class="details-header">Version history</h4>
                        <table class="packages" cellpadding="0" cellspacing="0">
                            <thead>
                                <tr class="header">
                                    <th class="version">
                                        Version
                                    </th>
                                    <th class="downloads">
                                        Downloads
                                    </th>
                                    <th class="lastUpdated">
                                        Last updated
                                    </th>
                                    <th class="rating">
                                        Rating
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var packageVersion in Model.PackageVersions) {
                                    <tr class="versionTableRow @if (packageVersion.LatestVersion) {<text>recommended </text>} @if (packageVersion.IsCurrent(Model)) {<text>current</text>} ">
                                        <td class="version" @if (packageVersion.LatestVersion) {<text>title="Latest Version"</text>}>
                                            @if (!packageVersion.IsCurrent(Model)) {
                                                <a href="@Url.Package(packageVersion)">@packageVersion.Title @packageVersion.Version</a>
                                            }
                                            else {
                                                <span>@packageVersion.Title @packageVersion.Version</span>
                                            }
                                        </td>
                                        <td class="downloads">@packageVersion.DownloadCount
                                        </td>
                                        <td class="lastUpdated">@packageVersion.LastUpdated.ToString("D")
                                        </td>
                                        <td class="rating">
                                            <div class="stars-rating">
                                                @ViewHelpers.DisplayRating(@packageVersion.RatingAverage)
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
        <div id="after-content">
            <div class="zone zone-after-content">
                <div id="unpublishPackageConfirmationDialogDiv" title="Confirm Unpublish" style="display: none">
                    <p>
                        Are you sure you wish to unpublish the package <span id="packageIdToUnpublishSpan">
                        </span>, version <span id="packageVersionToUnpublishSpan"></span>?
                    </p>
                    <p>
                        If you unpublish this item, users will no longer be able to view or download it.
                        Download counts and reviews are retained, however.
                    </p>
                    <p>
                        The item can still be downloaded from the feed, in case a dependent package requires
                        it. If you want to remove the item from the feed, delete it instead.
                    </p>
                    <form action="/Orchard.Gallery/Package/Unpublish" method="post">
                    <input type="hidden" id="packageIdToUnpublish" name="packageId" />
                    <input type="hidden" id="packageVersionToUnpublish" name="packageVersion" />
                    <input type="submit" value="Unpublish" />
                    <input type="button" value="Cancel" onclick="CloseConfirmationDialogDiv(); return false;" />
                    <input name="__RequestVerificationToken" type="hidden" value="ZvRArQBame0aiUbbmeRKm44g3TybW8KopxBshTIV9VA+fwE/WQeyiawslclO61C9U3ks8nOX01QhqMCnSQE2f9nFyJ60+H9mAr0VyCchz1TU94bLa5T5Jp52pefh2KLSn7M4C10cQAGgcZt2WsfV/8q50JX1Lx9D7hsD8BkneGUeZ9N9h+s8yqMYq3JGXaQ6Cy2bZ9XjBfPMFqPXLZr5JQ==" />
                    </form>
                </div>
                <div id="deleteRatingConfirmationDialogDiv" title="Confirm Deletion" style="display: none">
                    <p>
                        When you clear your rating, if you've left a review it will also be deleted. Do
                        you wish to proceed?</p>
                    <input type="button" value="Yes" id="confirmDeleteRatingButton" />
                    <input type="button" value="No" id="cancelDeleteRatingButton" />
                </div>
            </div>
        </div>
    </div>
</div>
@section BottomScripts {
    <link href="@Url.Content("~/Content/Contrib.Stars.css")" rel="stylesheet" type="text/css" />
}
