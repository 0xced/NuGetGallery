@using NuGetGallery;
@model DisplayPackageViewModel
<div class="content-item package">
    <div class="packageItem packages">
        <a href="@Url.Package(Model)">
            <img src="@(Model.IconUrl ?? Links.Content.Images.packageDefaultIcon_png)" class="thumbnail" title="@Model.Id Package icon" />
        </a>
        <header>
            <div>
                <h3>
                    <a href="@Url.Package(Model.Id)">@Model.Title</a>
                </h3>
                <div class="package-actions">
                    <span class="rating">
                        <div class="stars-rating " title="Log-in to rate this item">
                            @ViewHelpers.DisplayRating(@Model.RatingAverage)
                        </div>
                    </span>
                </div>
            </div>
            <div class="package-owner-actions">
                <p class="author">By
                    @Model.Authors.Flatten(@<a href="@Url.Search(item.Name)">@item.Name</a>)
                </p>
            </div>
        </header>
        <div class="detail">
            <p>
                @Model.Description
                <a href="@Url.Package(Model)">More information</a>
            </p>
            <ul class="packageMeta">
                <li>@Model.DownloadCount Downloads</li>
            </ul>
        </div>
    </div>
</div>