@using NuGetGallery;
@model SignInRequest

<div id="layout-main" class="aside-1 group">
    
    <aside id="aside-first" class="aside-first group">
        <div class="zone zone-aside-first">
            <nav id="leftNav">
                <img src="@Url.Content("~/Content/Images/userGraphic.png")" style="padding-left:70px"/>
                <p>
                    Don't have an account yet? <a href="/Users/Account/Register">Register now.</a>
                </p>
            </nav>
        </div>
    </aside>
    
    <div id="layout-content" class="group">
        <div id="content" class="group">
            <div class="zone zone-content">
                <section>
                    <header>
                        <span class="right"><img src="@Url.Content("~/Content/Images/required.png")"/></span>
                        <h2>Log On</h2>
                    </header>
                    @using (Html.BeginForm("sign-in", "UserAccount", FormMethod.Post, new { @id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.EditorForModel()
                        <div>
                            <button type="submit" name="Register">Log On</button>
                            <a href="/Users/Account/RequestLostPassword">Lost your Password?</a>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
 
</div>

@section BottomScripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/gallery.form.js")" type="text/javascript"></script>
}