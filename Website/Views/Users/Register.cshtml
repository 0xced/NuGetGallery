@model RegisterRequest
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/TwoColumnLayout.cshtml";
}

@section LeftNav {
    <img src="@Links.Content.Images.newAccountGraphic_png" style="padding-left:50px" alt="New Account Image"/>
    <p>With your account, you’ll be able to achieve all kinds of fame and glory by submitting your own packages.</p>
    <p>Already have an account? <a href="@Url.LogOn()">Log On.</a></p>
}

@section ContentHeader {
    <span class="right"><img src="@Links.Content.Images.required_png" alt="Required" /></span>
    <h2>Create A New Account</h2>
}

<form id="form" method="post" action="@Url.Current()">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.EditorForModel()
    <div>
        <button type="submit" title="Register">Register</button>
    </div>
</form>

@section BottomScripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/gallery.form.js")" type="text/javascript"></script>
}