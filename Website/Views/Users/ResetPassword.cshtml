@model PasswordResetViewModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/TwoColumnLayout.cshtml";
}

@section LeftNav {
    <img src="@Links.Content.Images.userGraphic_png" alt="The unknown user image" />
}                

@section ContentHeader {
    <span class="right"><img src="@Links.Content.Images.required_png" alt="Required" /></span>
    <h2>Reset Password</h2>    
}

<p>
    We are sorry to hear you forgot your password. Enter your email below and we will 
    send instructions to reset your password.
</p>

<form id="form" method="post" action="@Url.Current()">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @if (!ViewBag.ResetTokenValid) {
        <div class="validation-summary-errors">
            <ul>
                <li>
                    To try and reset your password again visit the 
                    <a href="@Url.Action(MVC.Users.ForgotPassword())">Forgot Password page</a>.
                </li>
            </ul>
        </div>
    }

    @Html.EditorForModel()
    <div>
        <button type="submit" name="Reset">Reset Password</button>
    </div>
</form>

@section BottomScripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/gallery.form.js")" type="text/javascript"></script>
}