@model AccountViewModel
@{
    ViewBag.Tab = "Contribute";
}

<h1 class="page-heading">My NuGet.org Account</h1>

<section id="actions">
    <h1>Actions</h1>
    <ul>
        @if (!Model.IsConfirmed)
        {
            <li>
                <h2>
                    <a class="action-menu-link" href="@Url.UploadPackage()">
                        <i class="icon-envelope action-menu-icon"></i>
                        <span class="action-menu-text">Confirm Your NuGet.org Account</span>
                    </a>
                </h2>
                <p>
                    Uploading packages or contacting package owners will require that you <a href="@Url.ConfirmationRequired()">confirm your account</a>. Why not get that out of the way now?
                </p>
            </li>
        }
        <li>
            <h2>
                <a class="action-menu-link" href="@Url.UploadPackage()">
                    <i class="icon-cloud-upload action-menu-icon"></i>
                    <span class="action-menu-text">Upload Package</span>
                </a>
            </h2>
            <p>
                Upload and publish your package for other NuGet users to download and enjoy. 
                You can upload multiple revisions of the same package, as long as the version 
                is different.
            </p>
        </li>
        <li>
            <h2>
                <a class="action-menu-link" href="@Url.Action(MVC.Users.Packages())">
                    <i class="icon-gears action-menu-icon"></i>
                    <span class="action-menu-text">Manage My Packages</span>
                </a>
            </h2>
            <p>Edit package details or Remove packages that you have previously uploaded.</p>
        </li>
        <li id="editProfile">
            <h2>
                <a class="action-menu-link" href="@Url.Action(MVC.Users.Edit())">
                    <i class="icon-user action-menu-icon"></i>
                    Edit Profile and Credentials
                </a>
            </h2>
            <p>Edit your public profile and logon credentials.</p>
        </li>
    </ul>
</section>

@if (Model.CuratedFeeds.Any())
{
    <section id="curatedfeeds">
        <h1>Manage My Curated Feeds</h1>
        <p>Click a curated feed to manage the included packages.</p>
        <ul>
            @foreach (var curatedFeed in Model.CuratedFeeds)
            {
                <li>
                    <a class="action-menu-link" href="@Url.RouteUrl(RouteName.CuratedFeed, new { name = curatedFeed })">
                        <span class="action-menu-text">@curatedFeed</span>
                    </a>
                </li>
            }
        </ul>
    </section>
}


<section id="apiKey">
    <h1>API Key</h1>
    
    <p>
        View your API Key on the @Html.ActionLink("Edit Profile page", MVC.Users.Edit()).
        @if (!Model.IsConfirmed) {
            @: NOTE: Before you can view your API Key you will need to <a href="@Url.ConfirmationRequired()">confirm your account.</a>
        }
    </p>
</section>
